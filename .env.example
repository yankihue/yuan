# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Transcription Provider: 'openai' or 'local'
# - openai: Uses OpenAI Whisper API (requires OPENAI_API_KEY)
# - local: Uses local whisper.cpp or faster-whisper (no API costs!)
TRANSCRIPTION_PROVIDER=local

# OpenAI API Key (only required if TRANSCRIPTION_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Local Whisper Configuration (only used if TRANSCRIPTION_PROVIDER=local)
# Path to whisper.cpp model file (default: /opt/whisper.cpp/models/ggml-base.en.bin)
WHISPER_MODEL_PATH=/opt/whisper.cpp/models/ggml-base.en.bin
# Path to whisper binary (default: 'whisper' - assumes it's in PATH)
WHISPER_BINARY_PATH=/opt/whisper.cpp/main

# Anthropic API Key (for Claude Code)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# GitHub Token (optional, for GitHub operations)
GITHUB_TOKEN=your_github_token_here

# Orchestrator Configuration
ORCHESTRATOR_HOST=localhost
ORCHESTRATOR_PORT=3000
ORCHESTRATOR_SECRET=your_shared_secret_here

# Optional: Working directory for Claude Code operations
WORKING_DIRECTORY=/home/ubuntu/projects

# Optional: Comma-separated list of allowed Telegram user IDs
# Leave empty to allow all users (not recommended for production)
ALLOWED_USER_IDS=123456789
